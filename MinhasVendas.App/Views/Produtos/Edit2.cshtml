@model MinhasVendas.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <vc:resumo></vc:resumo>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoCategoriaId" class="control-label"></label>
                <select asp-for="ProdutoCategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div>
                <label class="control-label"></label><br />
                <input type="radio" value="true" asp-for="Ativo" checked /> Disponível<br />
                <input type="radio" value="false" asp-for="Ativo" /> Indisponível<br />
            </div>
            <div class="form-group">
                <label asp-for="PrecoBase" class="control-label"></label>
                <input asp-for="PrecoBase" class="form-control" />
                <span asp-validation-for="PrecoBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoDeLista" class="control-label"></label>
                <input asp-for="PrecoDeLista" class="form-control" />
                <span asp-validation-for="PrecoDeLista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Imagem Atual</label><br />
                <img src="~/imagensProdutos/@Model.Imagem" alt="@Model.Imagem" style="width: 50px; height: 80px" />
            </div> <br />
            <div class="form-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="ImagemUpload" asp-for="ImagemUpload">
                    <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImagemUpload"></label>
                </div>
                <span asp-validation-for="ImagemUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

