@model MinhasVendas.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Produtos";

    ViewData["Rota"] = "Produtos";
    ViewData["Acao"] = "Novo Produto";
    ViewData["Rotulo"] = "Novo Produto";

    Layout = "_Argon";
}

<main class="container-fluid py-4">


    <div class="card">
        <div class="card-body">
            <div class="row">
                <h5 class="mb-1">
                    Novo Produto
                </h5>
                <div class="container-fluid py-4">
                    <div class="row">
                   
                        <div class="col-12">
                            <div class="multisteps-form">
                                <div class="row">
                                    <div class="col-12 col-lg-8 mx-auto mt-4 mb-sm-5 mb-3">
                                        <div class="multisteps-form__progress">
                                            <button class="multisteps-form__progress-btn js-active" type="button" title="Product Info"><span>1.</span></button>
                                            <button class="multisteps-form__progress-btn" type="button" title="Media">2.</button>
                                            <button class="multisteps-form__progress-btn" type="button" title="Pricing">3.</button>
                                        </div>
                                    </div>
                                </div>
                                <!--form panels-->
                                <div class="row">
                                    <div class="col-12 col-lg-8 m-auto">
                                        <form enctype="multipart/form-data" asp-action="Create" class="multisteps-form__form mb-4">
                                            <!--single form panel-->
                                            <div class="card multisteps-form__panel p-3 border-radius-xl bg-white js-active" data-animation="FadeIn">
                                                <h5 class="font-weight-bolder">Informações do Produto</h5>
                                                <vc:resumo></vc:resumo>
                                                <div class="multisteps-form__content">
                                                    <div class="row mt-3">
                                                        <div class="col-12 col-sm-6">
                                                            <label asp-for="Nome"></label>
                                                            <input asp-for="Nome" class="multisteps-form__input form-control" placeholder="Ex. T-Shirt" />
                                                            <span asp-validation-for="Nome" class="text-danger"></span>
                                                        </div>
                                                        <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                                                            <label asp-for="Codigo"></label>
                                                            <input asp-for="Codigo" class="multisteps-form__input form-control" placeholder="Ex. t1010" />
                                                            <span asp-validation-for="Codigo" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                                                            <label asp-for="Descricao"></label>
                                                            <input asp-for="Descricao" class="multisteps-form__input form-control" placeholder="Ex. t1010" />
                                                            <span asp-validation-for="Descricao" class="text-danger"></span>
                                                        </div>
                                                        <div class="col-12 col-sm-3 mt-3 mt-sm-0">
                                                            <label>Categoria</label>
                                                            <select asp-for="ProdutoCategoriaId" asp-items="ViewBag.categoriaId" class="form-control"></select>
                                                        </div>
                                                        <div class="col-12 col-sm-3 mt-3 mt-sm-0">
                                                            <label>Tamanho</label>
                                                            <select class="form-control">
                                                                <option value="">P</option>
                                                                <option value="">M</option>
                                                                <option value="">G</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="button-row d-flex mt-4">
                                                        <button class="btn bg-gradient-dark ms-auto mb-0 js-btn-next" type="button" title="Nexta">Próximo</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--single form panel-->
                                            <div class="card multisteps-form__panel p-3 border-radius-xl bg-white" data-animation="FadeIn">
                                                <h5 class="font-weight-bolder">Media</h5>
                                                <div class="multisteps-form__content">
                                                    <div class="row mt-3">
                                                        <div class="col-12">
                                                            <label>Foto do Produto</label>
                                                            <div class="custom-file">
                                                                <input type="file" class="custom-file-input" id="ImagemUpload" asp-for="ImagemUpload">
                                                                <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImagemUpload"></label>
                                                            </div>
                                                            <span asp-validation-for="ImagemUpload" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="button-row d-flex mt-4">
                                                        <button class="btn bg-gradient-secondary mb-0 js-btn-prev" type="button" title="Anterior">Anterior</button>
                                                        <button class="btn bg-gradient-dark ms-auto mb-0 js-btn-next" type="button" title="Next">Próximo</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--single form panel-->
                                            <!--single form panel-->
                                            <div class="card multisteps-form__panel p-3 border-radius-xl bg-white h-100" data-animation="FadeIn">
                                                <h5 class="font-weight-bolder">Valores</h5>
                                                <div class="multisteps-form__content mt-3">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <label asp-for="PrecoBase"></label>
                                                            <input asp-for="PrecoBase" class="multisteps-form__input form-control" placeholder="ex. 10.50" />
                                                            <span asp-validation-for="PrecoBase" class="text-danger"></span>
                                                        </div>
                                                        <div class="col-3">
                                                            <label asp-for="PrecoDeLista"></label>
                                                            <input asp-for="PrecoDeLista" class="multisteps-form__input form-control" placeholder="ex. 20" />
                                                            <span asp-validation-for="PrecoDeLista" class="text-danger"></span>
                                                        </div>
                                                        <div class="col-5">

                                                            <label class="control-label"></label> <br />
                                                            <input asp-for="Ativo" type="radio" value="true" checked /> Disponível <br />
                                                            <input asp-for="Ativo" type="radio" value="false" /> Indisponível <br />
                                                        </div>
                                                    </div>
                                                    <div class="button-row d-flex mt-4">
                                                        <button class="btn bg-gradient-secondary mb-0 js-btn-prev" type="button" title="Anterior">Anterior</button>
                                                        <button type="submit" value="Create" class="btn bg-gradient-success ms-auto mb-0" title="Cadastrar">Cadastrar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


