@model MinhasVendas.App.ViewModels.CarrinhoDeComprasViewModel

@{
    ViewData["Title"] = "Solicitar Aprovação";
}


<div class="modal-header">
    <h5 class="modal-title">@ViewData["Title"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form asp-action="SolicitarAprovacao">
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input hidden readonly asp-for="@Model.OrdemDeCompraViewModel.Id" class="form-control" value=@ViewBag.OrdemDeCompraId>
        </div>
        <div class="form-group">
            <label class="control-label">Valor do Frete</label>
            <input asp-for="@Model.OrdemDeCompraViewModel.ValorDeFrete" class="form-control" />
            <span asp-validation-for="@Model.OrdemDeCompraViewModel.ValorDeFrete" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <div class=" col-md-offset-2 col-md-10">
            <input type="submit" value="Solicitar" class="btn btn-success" />
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
        </div>
    </div>
</form>







