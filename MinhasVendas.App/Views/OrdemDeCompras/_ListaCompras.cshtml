@model IEnumerable<MinhasVendas.App.ViewModels.OrdemDeCompraViewModel>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Compras/Orçamentos</h5>
    </div>
    <div class="table-responsive">
        <table class="table align-items-center mb-0 table-hover">
            <thead>
                <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                        @Html.DisplayNameFor(model => model.StatusOrdemDeCompra)
                    </th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                        @Html.DisplayNameFor(model => model.FormaDePagamento)
                    </th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                        @Html.DisplayNameFor(model => model.DataDeCriacao)
                    </th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                        @Html.DisplayNameFor(model => model.Fornecedor)
                    </th>
                    <th class="text-secondary opacity-7">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex px-2 py-1">
                                <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-xs">
                                        @Html.DisplayFor(modelItem => item.StatusOrdemDeCompra)
                                    </h6>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="text-xs font-weight-bold mb-0">
                                @Html.DisplayFor(modelItem => item.FormaDePagamento)
                            </p>
                        </td>
                        <td class="align-middle text-center text-sm">
                            <span class="text-secondary text-xs font-weight-bold">
                                @Html.DisplayFor(modelItem => item.DataDeCriacao)
                            </span>
                        </td>
                        <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold">
                                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                            </span>
                        </td>
                        <td class="align-middle">
                            <a class="mx-3" asp-controller="OrdemDeCompras" asp-action="CarrinhoDeCompras" asp-route-id="@item.Id" title="Compras/Orçamentos">
                                <i class="ni ni-cart text-secondary"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

