<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Obtenha a URL atual
        var currentUrl = window.location.pathname;

        // Separe a URL por "/"
        var urlParts = currentUrl.split('/');

        // Recrie a URL com base no controlador (primeira parte da URL)
        var baseUrl = '/' + urlParts[1].toLowerCase();

        // Selecione todos os elementos de nav-link
        var navLinks = document.querySelectorAll(".nav-link");

        // Verifique a URL atual e adicione a classe "active" ao link correspondente
        navLinks.forEach(function (link) {
            if (link.getAttribute("href") === baseUrl) {
                link.classList.add("active");
            }
        });
    });
</script>


